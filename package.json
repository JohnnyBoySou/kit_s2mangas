{
  "name": "s2mangas",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "version-packages": "changeset version && pnpm i",
    "release": "pnpm build && changeset publish",
    "release:check": "./scripts/release.sh",
    "prepare:publish": "node scripts/prepare-publish.js prepare",
    "restore:workspace": "node scripts/prepare-publish.js restore",
    "release-npm": "pnpm changeset && pnpm version-packages && pnpm i && pnpm build && pnpm release",
    "release-beta": "pnpm changeset pre enter beta && pnpm version-packages && pnpm i && pnpm build && pnpm release --tag beta && pnpm changeset pre exit",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "typecheck": "pnpm -r run typecheck",
    "check": "pnpm -r run check",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch",
    "test:coverage": "pnpm -r run test:coverage",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -r run dev",
    "prepare": "husky install",
    "storybook": "pnpm --filter @s2mangas/react storybook",
    "storybook:build": "pnpm --filter @s2mangas/react storybook:build",
    "storybook:native": "pnpm --filter @s2mangas/native storybook",
    "storybook:native:build": "pnpm --filter @s2mangas/native storybook:build",
    "audit": "pnpm audit --audit-level moderate",
    "outdated": "pnpm outdated",
    "update": "pnpm update",
    "clean:all": "pnpm -r run clean && rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/lib packages/*/.turbo",
    "size": "pnpm -r run size",
    "bundle": "pnpm -r run bundle"
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c429992a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "changesets": "^1.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "storybook": "^8.6.14",
    "vite": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}